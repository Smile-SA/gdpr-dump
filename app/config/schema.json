{
    "id": "schema.json",
    "type": "object",
    "properties": {
        "extends": {
            "type": ["string", "array"]
        },
        "strict_schema": {
            "type": "boolean"
        },
        "database": {
            "$ref": "#/definitions/database"
        },
        "dump": {
            "$ref": "#/definitions/dump"
        },
        "filter_propagation": {
            "$ref" : "#/definitions/filterPropagation"
        },
        "faker": {
            "$ref": "#/definitions/faker"
        },
        "tables": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/table"
            }
        },
        "tables_whitelist": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/nonEmptyString"
            }
        },
        "tables_blacklist": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/nonEmptyString"
            }
        },
        "variables": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "version": {
            "$ref": "#/definitions/nonEmptyString"
        },
        "if_version": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/ifVersion"
            }
        },
        "converter_templates": {
            "type": "object",
            "additionalProperties": {
                "$ref": "#/definitions/converter"
            }
        }
    },
    "additionalProperties": false,
    "definitions": {
        "database": {
            "type": "object",
            "properties": {
                "driver": {
                    "type": "string",
                    "enum": ["pdo_mysql"]
                },
                "driver_options": {
                    "type": "object",
                    "additionalProperties": {
                        "type": ["string", "integer", "boolean"]
                    }
                },
                "host": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "port": {
                    "type": ["string", "integer"],
                    "minLength": 1
                },
                "user": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "password": {
                    "type": "string"
                },
                "name": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "charset": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "unix_socket": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "url": {
                    "$ref": "#/definitions/nonEmptyString"
                }
            },
            "additionalProperties": false
        },
        "dump": {
            "type": "object",
            "properties": {
                "output": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "add_drop_database": {
                    "type": "boolean"
                },
                "add_drop_table": {
                    "type": "boolean"
                },
                "add_drop_trigger": {
                    "type": "boolean"
                },
                "add_locks": {
                    "type": "boolean"
                },
                "complete_insert": {
                    "type": "boolean"
                },
                "compress": {
                    "type": "string",
                    "enum": ["none", "gzip", "bzip2"]
                },
                "default_character_set": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "disable_keys": {
                    "type": "boolean"
                },
                "events": {
                    "type": "boolean"
                },
                "extended_insert": {
                    "type": "boolean"
                },
                "hex_blob": {
                    "type": "boolean"
                },
                "init_commands": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/nonEmptyString"
                    }
                },
                "insert_ignore": {
                    "type": "boolean"
                },
                "lock_tables": {
                    "type": "boolean"
                },
                "net_buffer_length": {
                    "type": "integer"
                },
                "no_autocommit": {
                    "type": "boolean"
                },
                "no_create_info": {
                    "type": "boolean"
                },
                "routines": {
                    "type": "boolean"
                },
                "single_transaction": {
                    "type": "boolean"
                },
                "skip_comments": {
                    "type": "boolean"
                },
                "skip_definer": {
                    "type": "boolean"
                },
                "skip_dump_date": {
                    "type": "boolean"
                },
                "skip_triggers": {
                    "type": "boolean"
                },
                "skip_tz_utc": {
                    "type": "boolean"
                }
            },
            "additionalProperties": false
        },
        "faker": {
            "type": "object",
            "properties": {
                "locale": {
                    "type": ["string", "null"]
                }
            },
            "additionalProperties": false
        },
        "filterPropagation": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "ignored_foreign_keys": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "table": {
            "type": "object",
            "properties": {
                "truncate": {
                    "type": "boolean"
                },
                "converters": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/converter"
                    }
                },
                "skip_conversion_if": {
                    "type": "string"
                },
                "where": {
                    "type": "string"
                },
                "filters": {
                    "deprecated": true
                },
                "order_by": {
                    "type": "string"
                },
                "limit": {
                    "type": ["integer", "null"]
                }
            },
            "additionalProperties": false
        },
        "converter": {
            "type": "object",
            "properties": {
                "converter": {
                    "$ref": "#/definitions/nonEmptyString"
                },
                "parameters": {
                    "type": "object",
                    "properties": {
                        "converters": {
                            "type": ["array", "object"],
                            "items": {
                                "$ref": "#/definitions/converter"
                            },
                            "additionalProperties": {
                                "$ref": "#/definitions/converter"
                            }
                        }
                    }
                },
                "condition": {
                    "type": "string"
                },
                "unique": {
                    "type": "boolean"
                },
                "cache_key": {
                    "type": "string"
                },
                "disabled": {
                    "type": "boolean"
                }
            },
            "required": ["converter"],
            "additionalProperties": false
        },
        "ifVersion": {
            "type": "object",
            "properties": {
                "tables": {
                    "type": "object",
                    "additionalProperties": {
                        "$ref": "#/definitions/table"
                    }
                },
                "variables": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    }
                }
            },
            "additionalProperties": false
        },
        "nonEmptyString": {
            "type": "string",
            "minLength": 1
        }
    }
}
