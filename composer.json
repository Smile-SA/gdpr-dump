{
    "name": "smile/gdpr-dump",
    "description": "A utility to create anonymized database dumps",
    "type": "library",
    "authors": [
        {
            "name": "Technical Office",
            "email": "dirtech@smile.fr"
        }
    ],
    "require": {
        "php": "^7.0",
        "ext-json": "*",
        "doctrine/dbal": "^2.5",
        "fzaninotto/faker": "^1.8",
        "ifsnop/mysqldump-php": "^2.7",
        "justinrainbow/json-schema": "^5.2",
        "symfony/config": "^3.4",
        "symfony/console": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/finder": "^3.4",
        "symfony/yaml": "^3.4"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.7",
        "phpunit/phpunit": "^6.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Smile\\GdprDump\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "phpcs": "phpcs src tests -s --standard=PSR2",
        "phpmd": "phpmd src,tests xml phpmd.xml",
        "phpunit": "phpunit"
    },
    "bin": [
        "bin/gdpr-dump"
    ]
}
